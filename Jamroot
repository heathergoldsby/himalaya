import os ;
local HOME = [ os.environ HOME ] ;

use-project /libea : ../ealib/libea ;


exe hfc :
    src/hfc.cpp
    /libea//libea
    /libea//libea_runner
    : <link>static
;

install dist : hfc : <location>$(HOME)/bin ;

exe alps :
    src/alps.cpp
    /libea//libea
    /libea//libea_runner
    : <link>static
;

install dist : alps : <location>$(HOME)/bin ;
